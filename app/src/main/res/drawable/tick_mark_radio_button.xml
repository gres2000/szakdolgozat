<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked state -->
    <item
        android:state_checked="false">
        <shape
            android:shape="oval">
            <size android:width="50dp"
                android:height="50dp"/>
            <solid android:color="@color/white"/> <!-- Background color for checked state -->
            <stroke android:width="1dp"
                android:color="@color/black"/> <!-- Border color -->
        </shape>
    </item>

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape
            android:shape="oval">
            <size android:width="50dp"
                android:height="50dp"/>
            <solid android:color="@color/pink"/> <!-- Background color -->
            <stroke android:width="1dp"
                android:color="@color/black"/> <!-- Border color -->
        </shape>
    </item>
</selector>