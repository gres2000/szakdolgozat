<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<!--    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>-->


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <service android:name=".app.overlay_widget.OverlayService"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="true"
            android:foregroundServiceType="specialUse"/>

        <activity
            android:name=".app.authentication_activity.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.main_activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>
        <activity
            android:name=".app.authentication_activity.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>
        <activity
            android:name=".app.chat_activity.ChatActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>
        <activity
            android:name=".app.friends_activity.FriendsActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>
        <activity
            android:name=".app.friends_activity.FoundUsersActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>
        <activity
            android:name=".app.chat_activity.StartChatActivity"
            android:exported="true"
            android:theme="@style/Theme.MyApplication">
        </activity>

    </application>


</manifest>